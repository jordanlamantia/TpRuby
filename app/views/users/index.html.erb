<p id="notice"><%= notice %></p>

<div class="container">
  <div class="page-header">
    <h1>All users</h1>
  </div>



  <%= will_paginate %>

  <ul class="users">
    <% @users.each do |user| %>
        <li>
          <%= gravatar_for user %>
           | <%= link_to user.name, user %>
          <% if current_user.admin? && !current_user?(user) %>
              | <%= link_to "delete", user, method: :delete,
                            data: { confirm: "You sure?" } %>
          <% end %>
        </li>
    <% end %>
  </ul>

  <%= will_paginate %>

  <br>

  <%= link_to 'New User', new_user_path %>
</div>