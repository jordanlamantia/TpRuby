<% provide(:title, @user.name) %>
<p id="notice"><%= notice %></p>
<div class="container">
  <div class="row">
    <div class="col-md-4">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </div>
    <div class="col-md-8">
      <% if @user.microposts.any? %>
          <h3>Microposts (<%= @user.microposts.count %>)</h3>
          <hr>
          <ol class="microposts">
            <%= render @microposts %>
          </ol>
          <%= will_paginate @microposts %>
      <% end %>
    </div>
  </div>
</div>